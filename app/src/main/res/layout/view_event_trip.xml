<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:radius="12dp"
    cardview:cardElevation="4dp"
    cardview:cardCornerRadius="12dp"
    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="8dp">

        <ImageView
            android:id="@+id/event_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/share"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_flight"
            android:padding="4dp" />

        <!-- Event Type and Description -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Event Type -->
            <TextView
                android:id="@+id/event_type_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_type_view"
                android:textColor="@color/black"
                android:paddingBottom="4dp" />

            <!-- Event Date -->
            <TextView
                android:id="@+id/event_date_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_event"
                android:textColor="@color/black"
                android:paddingBottom="4dp" />

            <!-- Event Description -->
            <TextView
                android:id="@+id/event_desc_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_description"
                android:textColor="@color/black"
                android:paddingBottom="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
